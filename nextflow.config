params {

    fastq               =   "*_{1,2}.fastq.gz"
    database            =   "Burkholderia_pseudomallei_k96243"
    ref                 =   "k96243.fasta"
    reference           =   "${baseDir}/Databases/${database}/${ref}"
    resistance_db       =   "${baseDir}/Databases/${database}/${database}.db"
    card_db             =   "${baseDir}/Databases/${database}/${database}_CARD.db"
    patientMetaData     =   "${baseDir}/Reports/data/patientMetaData.csv"
    sweaveReport        =   "${baseDir}/Databases/${database}/sweaveTB-WGS-Micro-Report.Rnw"
    gwas                =   true
    matrix              =   true
    annotate            =   true
    mixtures            =   false
    phylogeny           =   false
    antibiotic_res      =   true
    strain              =   "all"
    tech                =   "Illumina"
    pairing             =   "PE"
    window              =   10000
    indel_merge         =   true
    tri_tetra_allelic   =   false
    size                =   6000000
    snpeff              =   "${database}"
    phred               =   "-phred33"
    org                 =   "haploid"
    logo                =   "${baseDir}/Reports/data/ARDaP_logo.png"
}

includeConfig 'configs/gatk.config'

process.executor = 'pbs' 

process {

    conda = "$HOME/anaconda3/envs/ARDaP_v1.5/" 
    errorStrategy = "ignore"

    withLabel: card {
        cpus = 1
        memory = "4G"
        time = "2h"
    }

    withLabel: index {
        cpus = 1
        memory = "4G"
        time = "2h"
    }

    withLabel: spandx_default {
        cpus = 1
        memory = "4G"
        time = "2h"
    }

    withLabel: spandx_alignment {
        cpus = 1
        memory = "4G"
        time = "2h"
    }
    withLabel: spandx_gatk_haplo {
        cpus = 4
        memory = "8G"
        time = "8h"
    }
	withLabel: spandx_gatk {
        cpus = 4
        memory = "8G"
        time = "8h"
    }

    withLabel: spandx_snpeff {
        cpus = 1
        memory = "8G"
        time = "2h"
    }

    withLabel: spandx_pindel {
        cpus = 2
        memory = "8G"
        time = "8h"
    }

    withLabel: genomic_queries {
        cpus = 1
        memory = "4G"
        time = "2h"
    }

    withLabel: card_queries {
        cpus = 1
        memory = "4G"
        time = "2h"
    }

    withLabel: report {
        cpus = 1
        memory = "4G"
        time = "2h"
    }

	withLabel: master_vcf {
        cpus = 1
        memory = "4G"
        time = "2h"
    }
	withLabel: SNP_matrix {
        cpus = 1
        memory = "4G"
        time = "2h"
    }
}
