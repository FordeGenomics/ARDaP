params {

    fastq               =   "*_{1,2}.fastq.gz"
    reference           =   "k96243.fasta"
    resistance_db       =   "${baseDir}/Databases/Burkholderia_pseudomallei_k96243/Burkholderia_pseudomallei_k96243.db"
    card_db             =   "${baseDir}/Databases/Burkholderia_pseudomallei_k96243/Burkholderia_pseudomallei_k96243.db"
    //card_ignore_db    =   "${baseDir}/Databases/Burkholderia_pseudomallei_k96243/Burkholderia_pseudomallei_k96243_CARD.db"
    patientMetaData     =   "${baseDir}/Reports/data/patientMetaData.csv"
    sweaveReport        =   "${baseDir}/Databases/Burkholderia_pseudomallei_k96243/sweaveTB-WGS-Micro-Report.Rnw"
    gwas                =   true
    matrix              =   true
    annotate            =   true
    mixtures            =   true
    phylogeny           =   false
    antibiotic_res      =   true
    strain              =   "all"
    tech                =   "Illumina"
    pairing             =   "PE"
    window              =   10000
    indel_merge         =   true
    tri_tetra_allelic   =   false
    size                =   6000000
    snpeff              =   "Burkholderia_pseudomallei_k96243"
    phred               =   "-phred33"
    org                 =   "haploid"
    logo                =   "${baseDir}/Reports/data/ARDaP_logo.png"
}

includeConfig 'configs/gatk.config'

process {

    errorStrategy = "ignore"

    conda = "/home/dsarovich2/anaconda3/envs/ARDaP_v1.5/" 

    withLabel: card {
        cpus = 1
        memory = "4G"
        time = "2h"
    }

    withLabel: index {
        cpus = 1
        memory = "4G"
        time = "2h"
    }

    withLabel: spandx_default {
        cpus = 2
        memory = "4G"
        time = "2h"
    }

    withLabel: spandx_alignment {
        cpus = 2
        memory = "8G"
        time = "2h"
    }

    withLabel: spandx_gatk {
        cpus = 2
        memory = "8G"
        time = "2h"
    }

    withLabel: spandx_snpeff {
        cpus = 2
        memory = "4G"
        time = "2h"
    }

    withLabel: spandx_pindel {
        cpus = 2
        memory = "8G"
        time = "2h"
    }

    withLabel: genomic_queries {
        cpus = 2
        memory = "8G"
        time = "2h"
    }

    withLabel: card_queries {
        cpus = 2
        memory = "8G"
        time = "2h"
    }

    withLabel: report {
        cpus = 2
        memory = "8G"
        time = "2h"
    }

}
